@section Head
{
    <link rel="stylesheet" as="style" href="~/css/application.css" asp-append-version="true">
}

@{
    // Referenced GOV.UK Design System: https://frontend.design-system.service.gov.uk/installing-with-npm/#get-the-css-assets-and-javascript-working
    
    // ReSharper Disable Razor.LayoutNotResolved
    Layout = "_GovUkPageTemplate";
    // ReSharper Restore Razor.LayoutNotResolved
}

@section Header
{
    @await Html.PartialAsync("_Header")
}

@section BeforeContent
{
    <script>
        document.body.className += ' js-enabled' + ('noModule' in HTMLScriptElement.prototype ? ' govuk-frontend-supported' : '');
    </script>
}

@RenderBody()

@section Footer
{
    @await Html.PartialAsync("_Footer")
}

@section BodyEnd
{
    <script type="module" src="js/govuk-frontend.min.js"></script>
    <script type="module">
        import { initAll } from '/js/govuk-frontend.min.js';
        initAll();
    </script>
}
